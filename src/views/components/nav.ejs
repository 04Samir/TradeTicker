<header class="sticky top-0 z-50 bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto">
        <div id="navbar" class="flex justify-between items-center h-16 px-4 sm:px-6 lg:px-8">
            <div id="brand-name" class="transition-transform hover:scale-105">
                <a href="/" class="text-2xl font-bold text-gray-900">
                    TradeTicker
                </a>
            </div>

            <div id="search-container" class="flex-1 flex justify-center max-w-sm transition-all duration-200">
                <form action="/search" method="GET" id="search-bar">
                    <div class="flex items-center px-4 py-2 rounded-md border focus:outline-none bg-gray-50">
                        <button type="submit" class="flex items-center" id="search-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-900">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                            </svg>
                        </button>
                        <input type="text" name="q" placeholder="Search Markets" id="search-input" class="ml-2 bg-gray-50 text-gray-900 border-none focus:outline-none" size="10" />
                    </div>
                </form>
            </div>

            <div class="space-x-4" id="navbar-items">
                <button id="user-button" class="p-2 rounded-full hover:bg-gray-100 transition-all duration-200 hover:scale-105">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-600">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                    </svg>
                </button>
                <button id="menu-button" class="p-2 rounded-full hover:bg-gray-100 transition-all duration-200 hover:scale-105">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-600">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <div id="menu-dropdown" class="hidden absolute top-16 right-0 w-56 bg-white shadow-lg rounded-md py-1 border border-gray-200 transform transition-all duration-200">
        <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100 transition-colors">About Us</a>
        <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100 transition-colors">Placeholder</a>
    </div>
</header>

<div id="search-modal" class="modal fixed hidden inset-0 z-40 overflow-y-auto">
    <div class="flex min-h-screen items-start justify-center pt-16 px-4 text-center sm:p-0">
        <div class="modal-backdrop fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

        <div class="modal-content relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all my-20 sm:w-full sm:max-w-2xl">
            <div class="absolute right-0 top-0 pr-4 pt-4">
                <button type="button" class="modal-close rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none">
                    <i data-lucide="x" class="h-6 w-6"></i>
                </button>
            </div>

            <div class="bg-white px-4 pt-5 pb-4 sm:p-6">
                <div class="border-b border-gray-200 mb-4">
                    <nav class="-mb-px flex space-x-8" aria-label="Tabs">
                        <% ['All', 'Stocks', 'Crypto', 'Forex', 'Indices'].forEach((category, index) => { %>
                        <a href="#" class="search-tab px-3 py-2 font-medium text-sm <%= index === 0 ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> border-b-2 whitespace-nowrap" data-category="<%= category %>">
                            <%= category %>
                        </a>
                        <% }); %>
                    </nav>
                </div>

                <div class="content-container max-h-[60vh] overflow-y-auto">
                    <div class="space-y-2" id="search-results">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="user-modal" class="modal hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex min-h-screen items-center justify-center p-4 text-center sm:p-0">
        <div class="modal-backdrop fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

        <div class="modal-content relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-md">
            <div class="absolute right-0 top-0 pr-4 pt-4">
                <button type="button" class="modal-close rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none">
                    <i data-lucide="x" class="h-6 w-6"></i>
                </button>
            </div>

            <div class="bg-white px-4 pb-4 pt-5 sm:p-6">
                <div id="login-form">
                    <h3 class="text-xl font-semibold leading-6 text-gray-900 mb-8">Welcome back</h3>
                    <form class="space-y-6">
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700">Email address</label>
                            <input type="email" id="email" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm">
                        </div>
                        <div>
                            <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                            <input type="password" id="password" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm">
                        </div>
                        <button type="submit" class="w-full flex justify-center py-2.5 px-4 rounded-lg text-sm font-semibold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">
                            Sign in
                        </button>
                    </form>
                    <div class="mt-6 text-center">
                        <button class="text-sm text-blue-600 hover:text-blue-500" onclick="toggleAuthForm()">
                            Don't have an account? Sign up
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>