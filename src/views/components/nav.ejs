<header class="sticky top-0 z-50 bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto">
        <div id="navbar" class="flex justify-between items-center h-16 px-4 sm:px-6 lg:px-8">
            <div id="brand-name" class="transition-transform hover:scale-105">
                <a href="/" class="text-2xl font-bold text-gray-900">
                    TradeTicker
                </a>
            </div>
            <div id="search-section" class="flex-1 flex justify-center max-w-sm px-4 sm:px-0">
                <form action="/search" method="GET" id="search-container" class="w-full">
                    <div id="search-bar" class="flex items-center px-4 py-2 rounded-md border focus:outline-none bg-gray-50">
                        <button type="submit" id="search-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-600 hover:text-gray-900">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                            </svg>
                        </button>
                        <input type="text" name="q" placeholder="Search Markets" id="search-input" class="ml-2 bg-gray-50 text-gray-500 border-none focus:outline-none" size="10" />
                        <div id="search-options" class="hidden items-center space-x-2 ml-2">
                            <button type="button" id="search-clear" class="ml-2 text-gray-600 hover:text-gray-900 focus:outline-none">
                                Clear
                            </button>
                            <span class="mx-2 h-6 w-px bg-gray-300"></span>
                            <button type="button" id="search-close" class="ml-2 text-gray-600 hover:text-gray-900 focus:outline-none">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-900">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div id="navbar-items" class="relative space-x-4">
                <button id="user-button" class="p-2 rounded-full hover:bg-gray-100 hover:scale-105">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-600">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                    </svg>
                </button>
                <button id="menu-button" class="p-2 rounded-full hover:bg-gray-100 hover:scale-105">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-600">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
                <div id="menu-dropdown" class="hidden absolute mt-5 right-[0.05rem] rounded-md bg-white shadow-lg ring-1 ring-black/5 focus:outline-none">
                    <div class="py-1">
                        <a href="/about" class="flex items-center px-4 py-2 text-sm text-gray-700 whitespace-nowrap">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-600 mr-2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
                            </svg>
                            About Us
                        </a>
                        <button id="theme-mode-toggle" class="flex items-center px-4 py-2 text-sm text-gray-700 cursor-pointer whitespace-nowrap">
                            <div id="theme-mode-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-600 mr-2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
                                </svg>
                            </div>
                            <span id="theme-mode-text">Dark Mode</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="search-modal" class="modal fixed hidden inset-0 z-40 overflow-y-auto">
    <div class="flex min-h-screen items-start justify-center pt-16 px-4 text-center sm:p-0">
        <div class="modal-backdrop fixed inset-0 bg-gray-500 bg-opacity-75"></div>
        <div class="modal-content relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl my-20 sm:w-full sm:max-w-2xl">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6">
                <div class="border-b border-gray-200 mb-4">
                    <nav class="-mb-px flex space-x-8">
                        <% ['All', 'Stocks', 'Crypto'].forEach((category, index) => { %>
                        <a href="#" class="search-tab px-3 py-2 font-medium text-sm <%= index === 0 ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> border-b-2 whitespace-nowrap" data-category="<%= category %>">
                            <%= category %>
                        </a>
                        <% }); %>
                    </nav>
                </div>
                <div class="content-container max-h-[60vh] overflow-y-auto">
                    <div class="space-y-2" id="search-results">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="user-modal" class="modal hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex min-h-screen items-center justify-center p-4 text-center sm:p-0">
        <div class="modal-backdrop fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
        <div class="modal-content relative transform overflow-hidden scale-95 opacity-0 rounded-lg bg-white text-left shadow-xl transition-all duration-300 sm:my-8 w-full max-w-lg sm:max-w-md">
            <div class="bg-white px-6 pb-6 pt-6 sm:p-6">
                <%- include('auth-form', { type: 'login' }) %>
            </div>
        </div>
    </div>
</div>