<div class="flex h-screen">
    <!-- Responsive Navbar -->
    <nav class="w-64 bg-gray-800 text-white h-full flex-shrink-0 hidden md:block">
        <ul class="mt-6">
            <li>
                <h3 class="px-6 py-2 text-gray-400 uppercase text-sm font-bold">Dashboard</h3>
                <ul>
                    <li>
                        <a href="#watchlist" class="block px-6 py-3 text-sm hover:bg-gray-700 rounded-md bg-gray-700">
                            My Watchlist
                        </a>
                    </li>
                </ul>
            </li>
            <li class="mt-6">
                <h3 class="px-6 py-2 text-gray-400 uppercase text-sm font-bold">Account</h3>
                <ul>
                    <li>
                        <a href="/@me/profile" class="block px-6 py-3 text-sm hover:bg-gray-700 rounded-md">
                            Profile
                        </a>
                    </li>
                    <li>
                        <a href="/@me/security" class="block px-6 py-3 text-sm hover:bg-gray-700 rounded-md">
                            Security
                        </a>
                    </li>
                    <li>
                        <a href="/@me/information" class="block px-6 py-3 text-sm hover:bg-gray-700 rounded-md">
                            Information
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <div class="flex-1 flex flex-col bg-gray-50">
        <header class="bg-white shadow px-6 py-4">
            <h2 class="text-2xl font-semibold text-gray-800">Dashboard</h2>
        </header>

        <div class="px-6 py-4 text-gray-800">
            <h3 class="text-xl font-semibold">Welcome Back, <%= username.toUpperCase() %>!</h3>
            <p class="text-xs text-gray-500 mt-1">
                Not You? <a href="/auth/logout" class="text-blue-500 hover:underline">Logout</a>
            </p>
        </div>

        <main class="flex-1 p-6 overflow-auto">
            <section id="watchlist">
                <h3 class="text-xl font-semibold mb-6 text-gray-700">My Watchlist (<%= watchlist.length %>)</h3>
                <% if (watchlist.length > 0) { %>
                <div id="watchlist-charts" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% watchlist.forEach(item => { %>
                    <div class="bg-white rounded-lg shadow-sm p-6 flex flex-col">
                        <div class="flex items-center justify-between mb-4">
                            <h4 class="text-lg font-semibold text-gray-800"><%= item.Symbol %></h4>
                            <button id="symbol-watchlist-toggle" class="text-gray-600 hover:text-red-600" data-ticker="<%= item.Symbol %>">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
                                </svg>
                            </button>
                        </div>
                        <div class="relative h-[300px]">
                            <canvas id="chart-<%= item.Symbol %>" data-symbol="<%= item.Symbol %>"></canvas>
                        </div>
                        <div class="flex justify-between mt-4">
                            <div id="timeframes-<%= item.Symbol %>" class="timeframes-container flex space-x-2" data-symbol="<%= item.Symbol %>"></div>
                            <button id="chart-type-toggle" class="p-2 rounded-md text-gray-600 hover:bg-gray-100">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 0 0 6 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0 1 18 16.5h-2.25m-7.5 0h7.5m-7.5 0-1 3m8.5-3 1 3m0 0 .5 1.5m-.5-1.5h-9.5m0 0-.5 1.5M9 11.25v1.5M12 9v3.75m3-6v6" />
                                </svg>
                            </button>
                        </div>
                    </div>
                    <% }) %>
                </div>
                <% } else { %>
                <p class="text-gray-600 text-sm mt-4">
                    Your Watchlist is Empty! Click the
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="inline w-5 mb-1 hover:cursor-pointer">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                    </svg>
                    Icon to Add Symbols to Your Watchlist.
                </p>
                <% } %>
            </section>

        </main>
    </div>
</div>