<section id="hero" class="min-h-screen bg-white flex items-center justify-center">
    <div class="text-center space-y-4 px-4">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900">
            TradeTicker
        </h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
            Explore the Markets &amp; Stay Updated with the Latest Market Trends
        </p>
        <a href="#market-overview" class="inline-block mt-4 px-6 py-3 bg-blue-600 text-white text-lg font-medium rounded-md hover:bg-blue-500 transition">
            Start Now
        </a>
    </div>
</section>

<section id="market-overview" class="max-w-7xl mx-auto py-20 px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">Market Overview</h2>
        <div class="mb-8">
            <div id="market-categories" class="flex justify-start space-x-4 border-b border-gray-300">
            </div>
        </div>
        <div id="market-items" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-6"></div>
        <div class="h-[400px] mb-6 relative">
            <canvas id="market-chart"></canvas>
        </div>
        <div class="flex justify-between items-center">
            <div id="market-timeframes" class="flex space-x-2">
            </div>
            <button id="market-chart-type-toggle" class="p-2 rounded-md text-gray-600 hover:bg-gray-100">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 0 0 6 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0 1 18 16.5h-2.25m-7.5 0h7.5m-7.5 0-1 3m8.5-3 1 3m0 0 .5 1.5m-.5-1.5h-9.5m0 0-.5 1.5M9 11.25v1.5M12 9v3.75m3-6v6" />
                </svg>
            </button>
        </div>
    </div>
</section>

<section id="latest-news" class="bg-white py-20">
    <div class="px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-semibold text-gray-900 mb-8 text-center">Latest Stories</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% news.forEach(article => { %>
            <a href="<%= article.url %>" target="_blank" class="flex flex-col bg-gray-800 text-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-transform transform hover:-translate-y-1">
                <div class="flex p-4">
                    <img src="<%= article.images.find(img => img.size === 'thumb').url %>" alt="Thumbnail" class="w-1/4 h-20 object-cover rounded-md flex-shrink-0 mr-4">
                    <div class="flex-1 flex flex-col justify-between">
                        <h3 class="text-sm md:text-base font-semibold line-clamp-2"><%= article.headline %></h3>
                        <div class="flex justify-between text-xs text-gray-400 mt-auto">
                            <span class="capitalize">Source: <%= article.source.toLowerCase() %></span>
                            <span class="italic"><%= article.relativeTime %></span>
                        </div>
                    </div>
                </div>
                <div class="border-t border-gray-700"></div>
                <div class="px-4 py-2 flex space-x-2 text-xs text-gray-300">
                    <span class="text-gray-400 font-semibold">TAGS:</span>
                    <% article.symbols.forEach(symbol => { %>
                    <span class="bg-blue-600 text-white font-medium px-2 py-0.5 rounded-md"><%= symbol %></span>
                    <% }); %>
                </div>
            </a>
            <% }); %>
        </div>
    </div>
</section>